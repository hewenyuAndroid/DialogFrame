<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:inputType="text"
        android:onClick="showNormal"
        android:text="加载自定义布局" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:inputType="text"
        android:onClick="showMessage"
        android:text="默认Dialog" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:inputType="text"
        android:onClick="showMessageNoTitle"
        android:text="不带标题" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:inputType="text"
        android:onClick="showMessageSingle"
        android:text="单个确认按钮" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:inputType="text"
        android:onClick="showTips"
        android:text="TipsLoading" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:inputType="text"
        android:onClick="showTipsInfo"
        android:text="TipsInfo" />


</LinearLayout>